{% block contentupdate %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    MATCH
                </div>
                <div class="panel-body">
                    <h4>Players:</h4>
                    {% for player in players %}
                        <p> {{ player.team }}:
                            {% for p in player.players %}
                                {{ p }}
                            {% endfor %}
                        </p>
                    {% endfor %}
                </div>
                <div class="panel-body">
                    <h4>Goals:</h4>
                    {% for goal in goals %}
                        <p> {{ goal.player }} - {{ goal.time |date("d/m/Y h:m:s", "Europe/Paris")}}</p>
                    {% endfor %}
                </div>
                <div class="panel-body">
                    <h4>Yellow Cards:</h4>
                    {% for ye in yellowcards %}
                        <p> {{ ye.player }} - {{ ye.time |date("d/m/Y h:m:s", "Europe/Paris")}}</p>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}