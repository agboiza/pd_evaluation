{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    {% for team in teams %}
                        {{ team.name }}:{{ team.result }}
                    {% endfor %}
                </div>
                <div class="panel-body">
                   <p> Location: {{ location }} </p>
                   <p> Kickoff: {{ kickoff |date("d/m/Y h:m:s", "Europe/Paris")}}</p>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
